{
  "name": "dev-cheatsheet",
  "displayName": "Dev Cheatsheet",
  "description": "Store and display developer cheat-sheets (regex patterns, git commands, code snippets, terminal tricks, etc.)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dev-cheatsheet.open",
        "title": "Dev Cheatsheet: Open"
      },
      {
        "command": "dev-cheatsheet.export",
        "title": "Dev Cheatsheet: Export to Current Folder"
      },
      {
        "command": "dev-cheatsheet.import",
        "title": "Dev Cheatsheet: Import from File"
      }
    ],
    "configuration": {
      "title": "Dev Cheatsheet",
      "properties": {
        "dev-cheatsheet.importedFilePath": {
          "type": "string",
          "default": "",
          "description": "Path to an external JSON file with additional cheatsheets"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
